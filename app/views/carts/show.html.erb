<h2>Panier</h2>

<p id="notice"><%= notice %></p>

<ul>
  <% @cart.line_items.each do |item| %>
  <li><%= item.product.title %> (x <%= item.quantity %>) <span class="badge badge-info"><%=
    number_to_currency(item.total, unit: "€", separator: ",", format: "%n %u")%></li>
  <% end %>
</ul>

<p class="font-weight-bold">Total : <span class="badge badge-info"><%= number_to_currency(@cart.
  total, unit: "€", separator: ",", format: "%n %u") %></span></p>

<div class="row">
  <div class="col">
    <%= link_to "retour aux produits", root_path, class: "btn btn-primary" %>
  </div>
  <div class="col">
    <%= button_to "vider le panier", @cart, method: :delete, data: { confirm: "etes-vous sur ?" },
    class: "btn btn-danger" %>
  </div>
</div>
