<!-- Start Site Content -->
<div class="site-content ptb-100">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="content-area">
          <div class="row">
            <div class="col-xs-12 col-sm-7 col-md-7">
              <!-- Start Place Head -->
              <div class="place-head">
                <h3>BILLING DETAILS</h3>
              </div>
              <!-- End Place Head -->
              <!-- Start Form -->
              <form action="#" class="appointment-form">
                <div class="single-field">
                  <input type="text" name="name" placeholder="First Name">
                </div>
                <!-- End Single Field -->
                <div class="single-field half-field">
                  <input type="text" name="email" placeholder="E-Mail">
                </div>
                <!-- End Single Field -->
                <!-- End Single Field -->
                <div class="single-field half-field-last">
                  <input type="text" name="phone" placeholder="Phone">
                </div>
                <!-- End Single Field -->
                <div class="single-field">
                  <select class="arrow-1">
                    <option selected="selected">Country</option>
                    <option value="USA">USA</option>
                    <option value="Canada">Canada</option>
                    <option value="Australia">Australia</option>
                  </select>
                </div>
                <!-- End Single Field -->
                <div class="single-field">
                  <select class="arrow-1">
                    <option selected="selected">Town/City</option>
                    <option value="USA">City</option>
                    <option value="Canada">Canada</option>
                    <option value="Australia">Australia</option>
                  </select>
                </div>
                <!-- End Single Field -->
                <div class="single-field">
                  <input type="text" name="password" placeholder="Password">
                </div>
                <!-- End Single Field -->
                <!-- End Single Field -->
                <div class="single-field">
                  <input type="text" name="password-confirm" placeholder="Confirm Password">
                </div>
                <!-- End Single Field -->
                <div class="single-field">
                  <textarea placeholder="Message" class="" rows="4" cols="50" name="message"></textarea>
                </div>
                <!-- End Single Field -->
                <%= form_tag charges_path do %>
                <article>
                  <% if flash[:error].present? %>
                  <div id="error_explanation">
                    <p><%= flash[:error] %></p>
                  </div>
                  <% end %>
                  <label class="amount">
                    <!-- <span>Amount: â‚¬5.00</span> -->
                  </label>
                </article>

                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-description="Paiement"
                data-amount="500"
                data-currency="eur"

                data-locale="auto"></script>
                <% end %>

              </form>
              <!-- End Form -->
            </div>
            <div class="col-xs-12 col-sm-5 col-md-5">
              <!-- Start Place Head -->
              <div class="place-head">
                <h3>YOUR ORDER</h3>
              </div>
              <!-- End Place Head -->
              <!-- Start Table -->
              <table class="table table-bordered order-table">
                <tbody>
                  <tr>
                    <td><strong>Product</strong></td>
                    <td class="text-right"><strong>Total</strong></td>
                  </tr>
                  <tr>
                    <td>Sample Product Name</td>
                    <td class="text-right">$ 123.00</td>
                  </tr>
                  <tr>
                    <td>Sample Product Name</td>
                    <td class="text-right">Free</td>
                  </tr>
                  <tr>
                    <td>Sample Product Name</td>
                    <td class="text-right">$ 246.00</td>
                  </tr>
                  <tr>
                    <td><strong>Subtotal</strong></td>
                    <td class="text-right"><strong>$ 615.00</strong></td>
                  </tr>
                </tbody>
              </table>
              

