<h1>Catalogue Produit</h1>

<% cache @products do %>
<% @products.each do |product| %>
<% cache product do %>
<div class="row mb-4">
  <div class="card w-50 bg-light">
    <div class="card-body text-center">
      <h2 class= "card-title"><%= product.title %></h2>
      <div class="row">
        <div class="col-6">
          <%= image_tag(product.image_url, width: "200") %>
        </div>
        <div class="col-6">
          <div class="card-text "><%= sanitize(product.description) %></div>
        </div>
      </div>
    </div>
    <div class="card-footer text-center font-weight-bold">
      <%= number_to_currency product.price, unit: "â‚¬",
      separator: ",", format: "%n %u" %>

      <%= button_to "ajouter au panier", line_items_path(
        product_id: product), class: "btn btn-primary" %>
        <!-- </div> -->
      </div>
    </div>
  </div>

  <% end %>
  <% end %>
  <% end %>
